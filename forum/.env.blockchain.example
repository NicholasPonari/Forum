# ─────────────── Blockchain Identity Configuration ───────────────
#
# Copy these variables to your .env.local file.
# For local development, the defaults work with the Besu dev network.
# For production, generate new keys and deploy to your VPS.

# JSON-RPC URL for the Besu node
BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545

# Private key of the issuer wallet
# IMPORTANT: Generate a key and store it securely — never commit keys to version control
# Generate with: node -e "console.log(require('ethers').Wallet.createRandom().privateKey.slice(2))"
BLOCKCHAIN_ISSUER_PRIVATE_KEY=

# Contract address (output of: cd blockchain && npm run deploy:local)
BLOCKCHAIN_CONTRACT_ADDRESS=

# Chain ID of the blockchain network (1337 for private Besu)
BLOCKCHAIN_CHAIN_ID=1337

# Secret salt for identity hash generation
# WARNING: Never change this after first user is registered — it breaks all existing hashes
BLOCKCHAIN_IDENTITY_SALT=
