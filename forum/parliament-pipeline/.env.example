# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJ...

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0

# OpenAI (for summarization and categorization)
OPENAI_API_KEY=sk-...

# Whisper configuration
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# System bot user ID in the forum profiles table
SYSTEM_BOT_USER_ID=

# Pipeline configuration
POLL_INTERVAL_MINUTES=30
MAX_RETRIES=3
LOG_LEVEL=INFO

# Pipeline API authentication
PIPELINE_API_KEY=change-this-to-a-secure-key

# Media storage (local path for downloaded audio/video)
MEDIA_STORAGE_PATH=/tmp/parliament-media
